<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2.60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

<androidx.cardview.widget.CardView
    android:layout_width="@dimen/_78ssp"
    android:layout_height="@dimen/_78ssp"
    app:cardCornerRadius="@dimen/_8sdp">

    <ImageView
        android:id="@+id/ivCategoryImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/iv_bg"
        android:src="@drawable/ic_category"
        android:scaleType="centerInside"/>

</androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="Vegetables and Fruits"
            android:maxLines="2"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="6.50dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>